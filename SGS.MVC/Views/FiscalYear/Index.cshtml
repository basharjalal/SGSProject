@using SGS.Domain.Entities;
@model List<FiscalYear> ;
@using SGS.WebMVC.Controllers;
<head>
    <link href="~/css/css bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/js bootstrap.bundle.min.js"></script>
    <script src="~/js/js popper.min.js"></script>
    <script src="~/js/js bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
   
</head>
<body dir="rtl" >
    <p>
        <div clalss="form-group">
            <a class="btn btn-primary" asp-area="" asp-controller="FiscalYear" asp-action="Create">  اضافه جديد </a>
        </div>
    </p>
    <div class="container">

        <table class=" table table-striped table-bordered table-hover  ">
            <thead class="table-warning">
                <tr>
                    <th>اسم النادي </th>
                    <th>  الاسم بالانجليزية</th>
                    <th>الاسم بالعربية </th>
                    <th>  تاريخ البداية  </th>
                    <th>   تاريخ النهاية </th>
                    <th> الحالة </th>
                    <th> الاجراءات </th>
                </tr>
            </thead>
            <tbody>
                @foreach (FiscalYear FiscalYear in Model)
                {
                <tr>

                    <td>
                        @FiscalYear.ClubName

                    </td>

                    <td>
                        @FiscalYear.EnglishName
                    </td>
                    <td>
                        @FiscalYear.ArabicName

                    </td>
                    <td>
                        @FiscalYear.StartedDate
                    </td>
                    <td>
                        
                        @FiscalYear.EndedDate

                    </td>
                    @if (FiscalYear.Status == 1)
                    {
                        <td>
                            مفتوحه
                        </td>
                    }
                    else
                    {
                        <td>
                            مغلقه
                        </td>
                        
                    }
                    <td>
                        <div class="row">
                            <div class="col">
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    <i class="bi bi-archive"></i>
                                </button>
                                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel">هل تريد اتمام عمليه الحذف </h5>
                                                <button type="button" class="text-black" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                                            </div>
                                            <div class="modal-body">
                                                @FiscalYear.ClubName:هل انت متاكد من حذف هذا النادي

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لا</button>
                                                <a class="btn btn-danger" asp-controller="FiscalYear" asp-action="Delete" asp-route-id="@FiscalYear.Id"> نعم </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <a class="btn btn-primary" asp-controller="FiscalYear" asp-action="Edit" asp-route-id="@FiscalYear.Id">
                                    <i class="bi bi-pencil-square"></i>

                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</body>